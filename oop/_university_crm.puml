@startuml

!theme monokai from ..\.styles


class Contact {
    +mobile: <i>str</i>
    +office: <i>str</i> | <i>None</i>
    +email: <i>str</i> | <i>None</i>
}
hide Contact empty methods

enum Sex {
    MALE
    FEMALE
}
hide Sex empty methods

enum Degree {
    CANDIDATE
    DOCTOR
}
hide Degree empty methods

abstract Person {
    +last_name: <i>str</i>
    +first_name: <i>str</i>
    +patr_name: <i>str</i>
    +sex: Sex
    +birthdate: <i>date</i>
    +contacts: Contact
}
abstract Personnel {
    +id: <i>int</i>
    +salary: <i>dec</i>
    +position: <i>str</i>
    +degree: Degree | <i>None</i>
    +titles: <i>list</i>[<i>str</i>]
    +exp: <i>dec</i>
}
class Teacher {

}
class Administrator {

}
class Student {
    +student_id: <i>str</i>
    +grant: <i>dec</i>
}


Person <|-- Student
Person <|-- Personnel
Personnel <|-- Teacher
Personnel <|-- Administrator

Person *- Sex
Person *- Contact

Personnel *- Degree

@enduml